{
  "name": "Java Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/java:0-11",
  "postCreateCommand": "mvn clean install",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "redhat.java"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installMaven": "true"
    }
  }
}
